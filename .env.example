# =============================================================================
# Environment Variables Template for FHIR Bridge Local Development
# Copy this file to .env and customize as needed
# =============================================================================

# Database Configuration
DB_USERNAME=fhir_user
DB_PASSWORD=fhir_password
DB_NAME=fhir_bridge
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_ISSUER_URI=http://localhost:8080/auth

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Admin Interface Credentials
PGADMIN_EMAIL=admin@fhirbridge.local
PGADMIN_PASSWORD=admin123
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# JVM Options (for containerized app)
JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=50.0 -XX:+UseG1GC

# Development Options
DEBUG_PORT=5005
MANAGEMENT_PORT=8081